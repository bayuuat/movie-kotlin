<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChallengeLima" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_black</item>
        <item name="colorPrimaryVariant">@color/primary_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FFFDBE18</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="InputText">
        <item name="android:layout_width">300dp</item>
        <item name="backgroundTint">#1A2942</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/border_edittext</item>
        <item name="android:padding">17dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>
</resources>